@model IEnumerable<BLL.DTO.InvoiceRow>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FinalProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductUnitCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPricePerUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaxPercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaxAmountFromPercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Currency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FinalProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductUnitCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPricePerUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxAmountFromPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice!.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>