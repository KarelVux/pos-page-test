@model IEnumerable<WebApp.Models.Admin.BusinessManagerDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Username
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BusinessManager.Business)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessManager.Business!.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BusinessManager.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BusinessManager.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BusinessManager.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>